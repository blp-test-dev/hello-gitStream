# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  slack_auto_recognition:
    if:
        - true
    run:
        - action: send-slack-message@v1
          args:
            webhook_url: "{{ env.SLACK_WEBHOOK }}"
            message: "A PR has modified the docs. See https://github.com/acme-co/webapp/pull/{{ pr.number }}"
