# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  slack_auto_recognition:
    if:
        - true
    run:
        - action: send-slack-message@v1
          args:
            webhook_url: "{{ env.SLACK_WEBHOOK }}"
            message: ":tada: Congrats to Liz Cranston for the amazing new PR: '{{ pr.title }}'! :tada: Check it out at https://github.com/acme-co/webapp/pull/{{ pr.number }}"
