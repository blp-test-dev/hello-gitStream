# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  get_repo_file:
    if:
      - true
    run:
      - action: add-comment@v1
        args:
          comment: |
            {{ newFiles }}
            {{ content }}


content: {{ repo | getRepoFile('README.md', env.GITSTREAM_TOKEN) | dump }}
newFiles: {{ source.diff.files | extractNewFiles | dump }}
