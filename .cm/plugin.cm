# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  plugin_test:
    if:
      - true
    run:
      - action: add-comment@v1
        args:
          comment: |
            {{ missingJSDocComment }}


missingJSDocComment: {{source.diff.files | sortFiles("plugins/filters") | extractNewFiles("index.js") | missingJSDocTags | formatComment("missingJSDoc") }}
