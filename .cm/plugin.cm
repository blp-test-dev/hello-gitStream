# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  plugin_test:
    if:
      - true
    run:
      - action: add-comment@v1
        args:
          comment: |
            {{ newPlugins }}


gitStreamPlugins: {{ source.diff.files | sortFiles }}
newPlugins: {{ source.diff.files | sortFiles | extractNewFiles("index.js") }}
