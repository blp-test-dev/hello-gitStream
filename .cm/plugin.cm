# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  plugin_test:
    if:
      - true
    run:
      - action: add-comment@v1
        args:
          comment: |
            {{ gitStreamPlugins }}


gitStreamPlugins: {{ source.diff.files | sortFiles }}
newPlugins: {{ gitStreamPlugins | extractNewFiles }}
missingJSDocTags: {{ newPlugins | extractMissingJSDocTags }}

missingJSDocComment: {{ missingJSDocTags | formatComment("missingJSDoc") }}
