manifest:
  version: 1.0

automations:
  enforce_labels:
    if:
      - not { has_required_labels }
    run:
      - action: request-changes@v1
        args:
          comment: Please ensure that your PR is labeled with one of the following: {{labels_list | join(', ')}}. These labels help us to better track and manage your contribution. Thank you.

labels_list:
  - 'Core'
  - 'Mobile'
  - 'UI'

has_required_labels: { pr.labels | match(list=labels_list) }
