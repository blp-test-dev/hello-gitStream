# -*- mode: yaml -*-
manifest:
  version: 1.0

newFiles: {{ source.diff.files | filter(attr='new_file', regex=r/^src\/(?!.*\.test\.js$).*\.js$/) | filter(attr='original_file', regex=r/^$/) }}
newTests: {{ source.diff.files | filter(attr='new_file', regex=r/src\/.*\.test\.js$/) | filter(attr='original_file', regex=r/^$/) | map(attr='new_file') }}

automations:
  new_files_check:
    if:
      - true
    run: 
      - action: add-comment@v1
        args:
          comment: |
            {% for file in newFiles %}
            * {{ (file | map(attr='new_file') ) }}
            {% endfor %}
